{
  "bybit": {
    "endpoints": {
      "testnet": {
        "base_url": "https://api-testnet.bybit.com",
        "websocket_url": "wss://stream-testnet.bybit.com/v5/public/spot",
        "websocket_private": "wss://stream-testnet.bybit.com/v5/private"
      },
      "mainnet": {
        "base_url": "https://api.bybit.com", 
        "websocket_url": "wss://stream.bybit.com/v5/public/spot",
        "websocket_private": "wss://stream.bybit.com/v5/private"
      }
    },
    "rate_limits": {
      "requests_per_second": 10,
      "requests_per_minute": 600,
      "order_rate_limit": 5,
      "burst_limit": 20,
      "cooldown_seconds": 1
    },
    "connection_settings": {
      "timeout_seconds": 10,
      "retry_attempts": 3,
      "retry_delay_seconds": 2,
      "keep_alive": true,
      "connection_pool_size": 10
    },
    "data_subscriptions": {
      "orderbook_levels": 5,
      "kline_intervals": ["1m", "15m", "1h", "4h", "1d"],
      "trade_stream": true,
      "ticker_stream": true,
      "account_stream": true
    },
    "security": {
      "api_key_validation": true,
      "signature_required": true,
      "timestamp_window_ms": 5000,
      "recv_window_ms": 5000,
      "ip_whitelist_required": false
    }
  },
  "data_providers": {
    "primary": "bybit",
    "backup": "binance",
    "price_feeds": {
      "real_time": true,
      "historical_data": true,
      "funding_rates": true,
      "order_book": true
    },
    "binance_backup": {
      "base_url": "https://api.binance.com",
      "rate_limit": 1200,
      "timeout": 10
    }
  },
  "caching": {
    "redis_settings": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "password": null,
      "ssl": false,
      "connection_timeout": 5
    },
    "cache_ttl": {
      "market_data": 60,
      "account_data": 30,
      "configuration": 3600,
      "historical_data": 86400
    },
    "cache_keys": {
      "prefix": "crypto_trading:",
      "market_data": "market:",
      "account": "account:",
      "config": "config:"
    }
  },
  "monitoring": {
    "health_checks": {
      "enabled": true,
      "interval_seconds": 30,
      "endpoints": [
        "/health",
        "/api/status"
      ],
      "alert_on_failure": true
    },
    "metrics": {
      "collect_api_latency": true,
      "collect_error_rates": true,
      "collect_order_metrics": true,
      "export_to_prometheus": false
    }
  },
  "error_handling": {
    "retry_configuration": {
      "max_retries": 3,
      "backoff_strategy": "exponential",
      "base_delay_seconds": 1,
      "max_delay_seconds": 60
    },
    "error_codes": {
      "retriable_errors": [429, 502, 503, 504],
      "non_retriable_errors": [400, 401, 403],
      "order_errors": [110001, 110003, 110004]
    },
    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "recovery_timeout_seconds": 60,
      "half_open_max_calls": 3
    }
  },
  "logging": {
    "api_calls": {
      "log_requests": true,
      "log_responses": false,
      "log_sensitive_data": false,
      "max_body_size": 1000
    },
    "websocket": {
      "log_connections": true,
      "log_messages": false,
      "log_heartbeats": false
    },
    "log_levels": {
      "api_client": "INFO",
      "websocket": "INFO",
      "orders": "DEBUG",
      "errors": "ERROR"
    }
  },
  "testing": {
    "mock_mode": {
      "enabled": false,
      "simulate_latency": true,
      "simulate_errors": false,
      "error_rate": 0.01
    },
    "paper_trading": {
      "enabled": true,
      "starting_balance": 10000,
      "commission_simulation": true,
      "slippage_simulation": true
    }
  }
}
