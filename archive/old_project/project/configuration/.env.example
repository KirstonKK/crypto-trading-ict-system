# Trading Algorithm Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ====================================
# BYBIT API CONFIGURATION
# ====================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=true  # Set to false for live trading
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_api_secret_here

# ====================================
# TRADING CONFIGURATION
# ====================================
# Trading mode: backtest, demo, live
TRADING_MODE=backtest
DEFAULT_CRYPTO_PAIR=BTCUSDT
DEFAULT_TIMEFRAME=1d
MAX_RISK_PER_TRADE=0.02  # 2% risk per trade
PORTFOLIO_HEAT_LIMIT=0.08  # 8% total portfolio risk

# ====================================
# NOTIFICATION SETTINGS
# ====================================
# Discord webhook for trade alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Telegram bot settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email settings (for alerts)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_specific_password_here

# ====================================
# DATABASE CONFIGURATION
# ====================================
DATABASE_URL=sqlite:///trading_algorithm.db
REDIS_URL=redis://localhost:6379

# ====================================
# LOGGING AND MONITORING
# ====================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/trading.log
ENABLE_PERFORMANCE_MONITORING=true

# ====================================
# SECURITY SETTINGS
# ====================================
# Secret key for encrypting sensitive data
SECRET_KEY=generate_a_random_secret_key_here
ENCRYPTION_KEY=generate_a_32_byte_encryption_key_here

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# ====================================
# DEVELOPMENT SETTINGS
# ====================================
DEBUG_MODE=false
DEVELOPMENT_MODE=true
ENABLE_PAPER_TRADING=true

# ====================================
# BACKTESTING CONFIGURATION
# ====================================
BACKTEST_START_DATE=2022-01-01
BACKTEST_END_DATE=2024-12-31
INITIAL_CAPITAL=10000  # USD
COMMISSION_RATE=0.001  # 0.1% commission

# ====================================
# ALGORITHM PARAMETERS
# ====================================
# Market phase predictor settings
ANALYSIS_LENGTH=100
PREDICTION_SENSITIVITY=6.0  # Higher for crypto volatility
PREDICTION_DAYS=10
ENABLE_MULTI_TIMEFRAME=true

# Risk management
STOP_LOSS_PERCENTAGE=0.04  # 4% stop loss for crypto
TAKE_PROFIT_RATIO=2.0  # 2:1 risk/reward ratio
MAX_POSITION_SIZE=0.1  # 10% of portfolio per position
